@model IEnumerable<BerkayMarket.Models.Urun>

@{
    ViewData["Title"] = "Uruns";
}

<h2>Uruns</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UrunID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kategori)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UrunID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credits)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kategori.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UrunID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.UrunID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.UrunID">Delete</a>|
                    <a asp-controller="Siparis" asp-action="SiparisVer" asp-route-id="@item.UrunID">SiparisVer</a>
                </td>
            </tr>
        }
    </tbody>
</table>