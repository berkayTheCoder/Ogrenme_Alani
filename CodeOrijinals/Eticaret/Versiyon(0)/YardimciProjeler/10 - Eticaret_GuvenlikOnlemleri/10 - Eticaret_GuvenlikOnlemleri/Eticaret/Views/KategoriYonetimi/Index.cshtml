@model IEnumerable<Eticaret.Models.Kategori>

@{
    ViewData["Title"] = "Index";
}

<h1>Tüm Kategoriler</h1>

<p>
    <a asp-action="Create" class="btn btn-light"><i class="far fa-file"></i> Kategori Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Adi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Adi)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light btn-sm"><i class="far fa-edit"></i> Düzenle</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-light btn-sm"><i class="far fa-file-alt"></i> Detay</a>
                @if (Context.Session.GetString("Turu") == "Admin")
                {
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm"><i class="far fa-trash-alt"></i> Sil</a>
                }
                <a asp-action="KategoriUrunleri" asp-controller="UrunYonetimi" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm"><i class="fas fa-barcode"></i> Ürünleri</a>
            </td>
        </tr>
}
    </tbody>
</table>
